<% Env['messages_tmp'].each do |msg_name, msg_content| %>
message <%= msg_name %> {<% msg_content.each do |var_name, var_content| next if /^[0-9]+_/.match(var_name).nil? %>
  <%= modifier(var_content["modifier"]) %> <%= var_content["type"] %> <%= var_name.split("_")[1] %> = <%= var_name.split("_")[0] %><%
    if var_content["default"] && var_content["type"] == "string"
%> [default = "<%= var_content["default"] %>"]<%
    elsif var_content["default"]
%> [default = <%= var_content["default"] %>]<%
    end
%>;<% end %>
}
<% end %>


